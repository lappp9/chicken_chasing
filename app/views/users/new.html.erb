<div class = "col-md-offset-2 col-md-8">
  <h2> Getting Started?</h2>
  <%= form_for(@user) do |f| %>
    <%= render 'shared/error_messages' %>

    <%= f.label :name %>
    <%= f.text_field :name %>

    <%= f.label :email %>
    <%= f.text_field :email %>

    <%= f.label :password %>
    <%= f.password_field :password %>

    <%= f.label :password_confirmation, "Password Confirmation" %>
    <%= f.password_field :password_confirmation %>

    <%= f.label :avatar, "Upload your profile picture!" %>
    <%= f.file_field :avatar %>

    <br />
    <br />
    <%= f.submit "Create my account", class: "btn btn-large btn-warning" %>
  <% end %>
</div>
