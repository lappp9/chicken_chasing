<%= form_for(@farmer) do |f| %>

  <%= f.label "What's your favorite quote?" %>
  <%= f.text_field :favorite_quotes, "ng-model" => "farmer.favorite_quotes", class: "form-control" %>

  <%= f.label "Who are some of your role models?" %>
  <%= f.text_field :role_models, "ng-model" => "farmer.role_models", class: "form-control" %>

  <%= f.label "What's your personal philosophy?" %>
  <%= f.text_field :personal_philosophy, "ng-model" => "farmer.personal_philosophy", class: "form-control" %>

<% end %>

