  <%= form_for(@farmer) do |f| %>
    <%= f.label "What's your favorite quote?" %>
    <%= f.text_field :favorite_quotes %>

    <%= f.label "Who are some of your role models?" %>
    <%= f.text_field :role_models %>

    <%= f.label "What's your personal philosophy?" %>
    <%= f.text_field :personal_philosophy %>

    <%= link_to "Previous", "#", class: "prev btn btn-small" %>
    <%= link_to "Next", "#",     class: "next btn btn-small" %>

    <%= f.submit "Previous", class: "hidden prev btn btn-small " %>
    <%= f.submit "Next", class: "hidden next btn btn-small " %>
  <% end %>

