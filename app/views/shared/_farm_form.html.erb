<%= form_for(@farm) do |f| %>

  <%= f.label "What's the name of your farm?" %>
  <%= f.text_field :name %>

  <%= f.label "Describe your farm in a sentence or two" %>
  <%= f.text_field :description %>

  <%= link_to "Previous", "#", class: "prev btn btn-small" %>
  <%= link_to "Next", "#",     class: "next btn btn-small" %>

  <%= f.submit "Next", class: "hidden btn btn-small " %>
<% end %>

