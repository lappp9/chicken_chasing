<%= form_for(@farm) do |f| %>

  <%= f.label "What's the name of your farm?" %>
  <%= f.text_field :name, "ng-model" => "farm.name" %>

  <%= f.label "Describe your farm in a sentence or two" %>
  <%= f.text_field :description, "ng-model" => "farm.description" %>

  <%= f.submit "Next", class: "hidden btn btn-small " %>
<% end %>

