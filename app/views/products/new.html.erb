<h2> New Product </h2>
<%= form_for @product do |p| %>

  <%= p.label :description %>
  <%= p.text_field :description %>

  <%= p.label :name %>
  <%= p.text_field :name %>

  <%= p.label :category %>
  <%= p.text_field :category %>

  <%= p.submit "Add a product!", class: "btn btn-medium btn-primary" %>
<% end %>
