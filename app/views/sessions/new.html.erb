<div class = "col-md-8 col-md-offset-2 login-page">
  <h2> Login! </h2>

  <%= form_for :session, url: sessions_path do |f| %>
    <%= f.label :email %>
    <%= f.text_field :email, class: "form-control" %>

    <%= f.label :password %>
    <%= f.password_field :password, class: "form-control" %>

    <br />
    <br />
    <%= f.submit "Login", class: "btn btn-lg btn-primary" %>

  <% end %>

  <p>
    <div class = "left" >Haven't signed up yet? <%= link_to "Sign up!", signup_path, class: "body-link" %></div>
    <div class = "right" >Forgot your password? <%= link_to "Reset it here!", '#', class: "body-link" %></div>
  </p>

</div>


