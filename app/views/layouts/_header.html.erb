<div id = "header">
  <span id = 'logo'>  <%= link_to logo, root_path %>  </span>
  <span id = "title"><%= link_to 'ChickenChasing', root_path, class: 'menu title' %></span>

  <span id = "middleMenu">
    <div class = "left">
      <%= link_to 'Tour', '#', class: 'menu' %> | 
    </div>
    <div id = "cart">
      <span class = 'glyphicon glyphicon-shopping-cart menu'><span class="badge cart-badge">3</span></span>
    </div>
  </span>

  <span id = "rightMenuSpan">
    <ul class = "menu">
      <li><%= link_to '* Premium', '#', class: 'menu' %></li>

      <% if signed_in? %>
        <li><%= link_to '* Logout', logout_path, method: 'delete', class: 'menu' %></li>
      <% else %>
        <li><%= link_to '* Login', login_path, class: 'menu' %></li>
      <% end %>

    </ul>
    <ul class = "menu">
      <li><%= link_to '* News','#', class: 'menu' %></li>
      <li><%= link_to '* Sign Up', '#', class: 'menu', "data-target" => "#myModal", "data-toggle" => "modal" %></li>
    </ul>
  </span>
</div>


<!-- Modal -->
<div class="modal fade" id="myModal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
        <h4 class="modal-title" id="myModalLabel">Before you get started, would you like to sign up as a buyer or seller?</h4>
      </div>
      <div class="modal-body">
        <button type="button" class="left btn-lg btn-primary">Seller</button>
        <button type="button" class="right btn-lg btn-primary">Buyer</button>
      </div>
      <br />
      <div class="modal-footer">
        <%= link_to "Cancel", "data-dismiss" => "modal" %>
      </div>
    </div><!-- /.modal-content -->
  </div><!-- /.modal-dialog -->
</div><!-- /.modal -->
