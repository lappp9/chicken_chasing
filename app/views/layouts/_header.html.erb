<div id = "header">
  <span id = 'logo'>  <%= link_to logo, root_path %>  </span>
  <span id = "title"><%= link_to 'ChickenChasing', root_path, class: 'menu title' %></span>

  <span id = "middleMenu">
    <%= link_to 'Tour', '#', class: 'menu' %> | <%= link_to 'About', '#', class: 'menu' %>
  </span>

  <span id = "rightMenuSpan">
    <ul class = "menu">
      <li><%= link_to '* Premium', '#', class: 'menu' %></li>

      <% if signed_in? %>
        <li><%= link_to '* Logout', logout_path, method: 'delete', class: 'menu' %></li>
      <% else %>
        <li><%= link_to '* Login', login_path, class: 'menu' %></li>
      <% end %>

    </ul>
    <ul class = "menu">
      <li><%= link_to '* News','#', class: 'menu' %></li>
      <li><%= link_to '* Sign Up', signup_path, class: 'menu' %></li>
    </ul>
  </span>
</div>
