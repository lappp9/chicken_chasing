<%= stylesheet_link_tag "home" %>

<div id = "homePage" class = "container-fluid">

  <div class = "header"> 
    <ul class = "menu col-md-offset-8  col-md-4">
      <% unless signed_in? %>
        <li><%= link_to "SIGN-UP", "#", "data-target" => "#myModal", "data-toggle" => "modal"  %></li>
      <% end %>
      <li><%= link_to "HOME", root_path %></li>
      <li><%= link_to "ABOUT", about_path %></li>
      <li><%= link_to "CONTACT", contact_path %></li>

      <% if signed_in? %>
        <li><%= link_to "ACCOUNT", user_path(current_user) %></li>
      <% else %>
        <li><%= link_to "LOGIN", login_path %></li>
      <% end %>

    </ul>
  </div>

  <div class = "logo">
    <%= image_tag "logo_2.png", width: "500px", class: "logo-image" %>
  </div>

  <div class = "searchBar">

    <%= form_tag( product_search_path, method: :get, class: "form-inline", role: "form"  ) do %>
        <%= text_field_tag :product_search, "", class: "searchBarTextField", placeholder: "Looking for a product?" %>
    <% end %>
  </div>

<!-- Modal -->
<div class="modal fade" id="myModal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
        <h4 class="modal-title" id="myModalLabel">Before you get started, would you like to sign up as a buyer or seller?</h4>
      </div>
      <div class="modal-body">
        <%= link_to "Buyer", new_user_path, method: :get, class: "btn btn-lg btn-primary left modalBtn" %>
        <%= link_to "Seller", new_farmer_path, method: :get, class: "btn btn-lg btn-primary right modalBtn" %>

      </div>
      <br />
      <div class="modal-footer">
        <%= link_to "Cancel", "#", :class => "cancel", "data-dismiss" => "modal" %>
      </div>
    </div><!-- /.modal-content -->
  </div><!-- /.modal-dialog -->
</div><!-- /.modal -->






</div>
